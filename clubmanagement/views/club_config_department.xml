<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="club_config_department_tree_view" model="ir.ui.view">
            <field name="name">club.department.tree</field>
            <field name="model">club.department</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="club_id" />
                    <field name="subclub_id" />
                    <field name="hr_department_id" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <record id="club_config_department_form_view" model="ir.ui.view">
            <field name="name">club.department.form</field>
            <field name="model">club.department</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="club_id" />
                            <field name="subclub_id" />
                            <field name="hr_department_id" />
                            <field name="active" />
                        </group>
                        <notebook>
                            <page string="Pools">
                                <field name="pool_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_config_department_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">club.department</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                
            </field>
        </record>

        <menuitem
            id="club_config_department_menu"
            name="Departments"
            action="club_config_department_action"
            groups="clubmanagement.group_clubmanagement_master_user"
            parent="clubmanagement_configuration_menu"
            sequence="30"/>
    </data>
    

</odoo>
