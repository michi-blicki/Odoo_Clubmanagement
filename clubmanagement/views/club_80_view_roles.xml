<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="club_role_form_view" model="ir.ui.view">
            <field name="name">club.role.form</field>
            <field name="model">club.role</field>
            <field name="arch" type="xml">
                <form string="Role / Function">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                                <span class="ml-2" invisible="active == True">
                                    (<span style="color:red;">Archived</span>)
                                </span>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="role_type"/>
                                <field name="scope_type" readonly="1"/>
                                <field name="code"/>
                                <field name="name_extension"/>
                            </group>
                            <group>
                                <field name="company_id" groups="clubmanagement.group_clubmanagement_administrator"/>
                                <field name="company_id" readonly="1" groups="!clubmanagement.group_clubmanagement_administrator"/>
                            </group>
                            <group>
                                <field name="club_id" readonly="True" invisible="True"/>
                                <field name="subclub_id"/>
                                <field name="department_id"/>
                                <field name="team_id"/>
                                <field name="board_id"/>
                                <field name="pool_id"/>
                                <field name="member_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group string="Permissions">
                            <field name="perm_read"/>
                            <field name="perm_write"/>
                            <field name="perm_create"/>
                            <field name="perm_unlink"/>
                            <field name="perm_mail"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_role_list_view" model="ir.ui.view">
            <field name="name">club.role.list</field>
            <field name="model">club.role</field>
            <field name="arch" type="xml">
                <list string="Roles / Functions" default_order="role_type, code">
                    <field name="active" widget="boolean_button"/>
                    <field name="role_type"/>
                    <field name="scope_type"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="member_id"/>
                    <field name="department_id"/>
                    <field name="team_id"/>
                    <field name="board_id"/>
                    <field name="subclub_id"/>
                    <field name="pool_id"/>
                    <field name="perm_read" widget="boolean_button"/>
                    <field name="perm_write" widget="boolean_button"/>
                    <field name="perm_create" widget="boolean_button"/>
                    <field name="perm_unlink" widget="boolean_button"/>
                    <field name="perm_mail" widget="boolean_button"/>
                </list>
            </field>
        </record>

        <record id="club_role_search_view" model="ir.ui.view">
            <field name="name">club.role.search</field>
            <field name="model">club.role</field>
            <field name="arch" type="xml">
                <search string="Search Roles / Functions">
                    <field name="name"/>
                    <field name="role_type"/>
                    <field name="scope_type"/>
                    <field name="member_id"/>
                    <field name="code"/>
                    <field name="department_id"/>
                    <field name="team_id"/>
                    <field name="board_id"/>
                    <field name="subclub_id"/>
                    <field name="pool_id"/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>

        <record id="club_roles_list_action" model="ir.actions.act_window">
            <field name="name">Roles</field>
            <field name="res_model">club.role</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_ids" eval="[
                (5,0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('club_role_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('club_role_form_view')}),
            ]"/>
            <field name="search_view_id" ref="club_role_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership type for your club!
                </p>
            </field>
        </record>
        
        <menuitem
            id="club_roles_list_menu"
            name="Roles / Functions"
            action="club_roles_list_action"
            groups="clubmanagement.group_clubmanagement_key_user"
            parent="club_administration_root_menu"
            sequence="20"/>
    
    </data>
    

</odoo>
