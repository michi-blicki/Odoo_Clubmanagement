<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="club_config_pool_tree_view" model="ir.ui.view">
            <field name="name">club.pool.tree</field>
            <field name="model">club.pool</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="department_id" />
                    <field name="hr_department_id" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <record id="club_config_pool_form_view" model="ir.ui.view">
            <field name="name">club.pool.form</field>
            <field name="model">club.pool</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="department_id" />
                            <field name="hr_department_id" />
                            <field name="active" />
                        </group>
                        <notebook>
                            <page string="Teams">
                                <field name="team_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_config_pool_action" model="ir.actions.act_window">
            <field name="name">Pools</field>
            <field name="res_model">club.pool</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                
            </field>
        </record>

        <menuitem
            id="club_config_pool_menu"
            name="Pools"
            action="club_config_pool_action"
            groups="clubmanagement.group_clubmanagement_master_user"
            parent="clubmanagement_configuration_menu"
            sequence="20"/>
    
    </data>
    

</odoo>
