<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="club_config_subclub_tree_view" model="ir.ui.view">
            <field name="name">club.subclub.tree</field>
            <field name="model">club.subclub</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="company_id" />
                    <field name="parent_club_id" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <record id="club_config_subclub_form_view" model="ir.ui.view">
            <field name="name">club.subclub.form</field>
            <field name="model">club.subclub</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="company_id" />
                            <field name="parent_club_id" />
                            <field name="active" />
                        </group>
                        <notebook>
                            <page string="Boards">
                                <field name="board_ids" />
                            </page>
                            <page string="Departments">
                                <field name="department_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_config_subclub_action" model="ir.actions.act_window">
            <field name="name">Subclubs</field>
            <field name="res_model">club.subclub</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                
            </field>
        </record>
        
        <menuitem
            id="club_config_subclub_menu"
            name="Subclubs"
            action="club_config_subclub_action"
            groups="clubmanagement.group_clubmanagement_administrator"
            parent="clubmanagement_configuration_menu"
            sequence="40"/>
    </data>
    

</odoo>
