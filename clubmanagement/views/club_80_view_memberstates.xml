<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <!-- Form View -->
        <record id="view_club_member_state_form" model="ir.ui.view">
            <field name="name">club.member.state.form</field>
            <field name="model">club.member.state</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" invisible="active"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h2><field name="name" placeholder="State Name"/></h2>
                        </div>
                        <group>
                            <group>
                                <field name="state_type"/>
                                <field name="code"/>
                                <field name="sequence"/>
                                <field name="color" widget="color_picker"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Kanban View -->
        <record id="view_club_member_state_kanban" model="ir.ui.view">
            <field name="name">club.member.state.kanban</field>
            <field name="model">club.member.state</field>
            <field name="arch" type="xml">
                <kanban default_order="sequence,name">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="code"/>
                    <field name="sequence"/>
                    <field name="state_type"/>
                    <field name="member_ids"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="card">
                            <div class="oe_kanban_global_click">
                                <div t-attf-class="oe_kanban_card_header oe_kanban_color_#{record.color.raw_value}">
                                    <div class="oe_kanban_card_header_title d-flex justify-content-between align-items-center">
                                        <div class="o_kanban_record_title">
                                            <strong><field name="name"/></strong>
                                        </div>
                                        <span t-if="!record.active.raw_value" class="badge badge-danger">Inactive</span>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <hr class="mt-2 mb-2"/>
                                    <table class="table table-sm mb-0">
                                        <tbody>
                                            <tr>
                                                <th class="text-left">Code:</th>
                                                <td class="text-right"><field name="code"/></td>
                                            </tr>
                                            <tr>
                                                <th class="text-left">Sequence:</th>
                                                <td class="text-right"><field name="sequence"/></td>
                                            </tr>
                                            <tr>
                                                <th class="text-left">State Type:</th>
                                                <td class="text-right"><field name="state_type"/></td>
                                            </tr>
                                            <tr>
                                                <th class="text-left">Members:</th>
                                                <td class="text-right"><field name="member_ids" widget="statinfo"/></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- List View -->
        <record id="view_club_member_state_list" model="ir.ui.view">
            <field name="name">club.member.state.list</field>
            <field name="model">club.member.state</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="sequence"/>
                    <field name="state_type"/>
                    <field name="member_ids" string="Members Count" widget="statinfo"/>
                    <field name="active"/>
                    <field name="color" widget="color"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_club_member_state_search" model="ir.ui.view">
            <field name="name">club.member.state.search</field>
            <field name="model">club.member.state</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="state_type"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                </search>
            </field>
        </record>

        <record id="club_member_state_list_action" model="ir.actions.act_window">
            <field name="name">Member States</field>
            <field name="res_model">club.member.state</field>
            <field name="view_ids" eval="[
                (5,0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_club_member_state_kanban')}),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_club_member_state_list')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_club_member_state_form')}),
            ]"/>
            <field name="search_view_id" ref="view_club_member_state_search"/>
        </record>

    
        <menuitem
            id="club_memberstates_list_menu"
            name="Member States"
            action="club_member_state_list_action"
            groups="clubmanagement.group_clubmanagement_administrator"
            parent="club_administration_root_menu"
            sequence="40"/>
    
    </data>
    

</odoo>
