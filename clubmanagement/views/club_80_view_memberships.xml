<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="club_member_membership_form_view" model="ir.ui.view">
            <field name="name">club.member.membership.form</field>
            <field name="model">club.member.membership</field>
            <field name="arch" type="xml">
                <form string="Membership">
                    <header>
                        <field name="active" invisible="1"/>
                        <button string="Archive" type="object" name="action_archive" invisible="active == False" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_show_members" type="object" class="oe_stat_button" icon="fa-users" invisible="member_count == 0">
                                <field name="member_count" widget="statinfo" string="Members"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Membership Name"/>
                            </h1>
                            <h2>
                                <field name="code" placeholder="Membership Code"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Products">
                                <group>
                                    <field name="main_product_id"/>
                                    <field name="main_product_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>
                                <field name="additional_product_ids">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="price" widget="monetary" options="{'currency_field': 'parent.currency_id'}"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_member_membership_kanban_view" model="ir.ui.view">
            <field name="name">club.member.membership.kanban</field>
            <field name="model">club.member.membership</field>
            <field name="arch" type="xml">
                <kanban string="Memberships" default_group_by="company_id" default_order="sequence" class="o_kanban_small_column">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                    <field name="member_count"/>
                    <field name="price"/>
                    <field name="currency_id"/>
                    <field name="company_id"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.active.raw_value ? '' : 'text-muted'}">
                                <div class="oe_kanban_content">
                                    <div class="o_kanban_record_top mb-0">
                                        <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title">
                                                <field name="name"/>
                                                <span t-if="!record.active.raw_value" class="text-danger ml-2">
                                                    (<span t-esc="env._t('Inactive')" />)
                                                </span>
                                            </strong>
                                        </div>
                                    </div>
                                    <div class="text-muted">
                                        <field name="code"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <span class="badge rounded-pill text-bg-info">
                                                <i class="fa fa-users"/> <t t-esc="record.member_count.value"/> <span t-esc="env._t('Members')" />
                                            </span>
                                        </div>
                                        <div class="oe_kanban_bottom_right">
                                            <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="club_member_membership_list_view" model="ir.ui.view">
            <field name="name">club.member.membership.list</field>
            <field name="model">club.member.membership</field>
            <field name="arch" type="xml">
                <list string="Memberships" default_order="sequence">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="main_product_id"/>
                    <field name="price"/>
                    <field name="member_count"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="club_member_list_view_for_membership" model="ir.ui.view">
            <field name="name">club.member.list.for.membership</field>
            <field name="model">club.member</field>
            <field name="arch" type="xml">
                <list string="Members">
                    <field name="photo" widget="image" options="{'size': [36, 36]}"/>
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="gender"/>
                    <field name="birthdate_date"/>
                    <field name="city"/>
                    <field name="nationality_id"/>
                    <field name="department_ids"/>
                    <field name="team_ids"/>
                    <field name="membership_date_start"/>
                    <field name="membership_date_end"/>
                    <field name="current_state_id"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="club_member_membership_search_view" model="ir.ui.view">
            <field name="name">club.member.membership.search</field>
            <field name="model">club.member.membership</field>
            <field name="arch" type="xml">
                <search string="Search Memberships">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="main_product_id"/>
                    <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>


        <record id="action_club_member_list_for_membership" model="ir.actions.act_window">
            <field name="name">Members</field>
            <field name="res_model">club.member</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('current_membership_id', '=', active_id)]</field>
            <field name="context">{'search_default_current_membership_id': active_id}</field>
            <field name="view_id" ref="club_member_list_view_for_membership"/>
        </record>

        <record id="club_member_membership_list_action" model="ir.actions.act_window">
            <field name="name">Memberships</field>
            <field name="res_model">club.member.membership</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_ids" eval="[
                (5,0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('club_member_membership_kanban_view')}),
                (0, 0, {'view_mode': 'list', 'view_id': ref('club_member_membership_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('club_member_membership_form_view')}),
            ]"/>
            <field name="search_view_id" ref="club_member_membership_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first membership type for your club!
                </p>
            </field>
        </record>

        <menuitem
            id="club_membership_list_menu"
            name="Membership Types"
            action="club_member_membership_list_action"
            groups="clubmanagement.group_clubmanagement_master_user"
            parent="club_administration_root_menu"
            sequence="30"/>
    
    </data>
    

</odoo>
