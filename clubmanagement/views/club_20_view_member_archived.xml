<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data> 

        <record id="club_member_archived_list_view" model="ir.ui.view">
            <field name="name">Club Member: Archived List</field>
            <field name="model">club.member</field>
            <field name="arch" type="xml">
                <list string="Archived Members" default_order="lastname asc, firstname asc">
                    <field name="id" />
                    <field name="lastname" />
                    <field name="firstname" />
                    <field name="birthdate_date" />
                    <field name="current_membership_id" />
                    <field name="membership_date_end" />
                    <field name="state_date_start" string="Archived Date"/>
                </list>
            </field>
        </record>

    
        <record id="club_member_archived_list_action" model="ir.actions.act_window">
            <field name="name">Club Member: Archived List</field>
            <field name="res_model">club.member</field>
            <field name="view_mode">list,form</field>
            <field name="view_ids" eval="[
                (5,0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('club_member_archived_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('club_member_form_view')}),
            ]"/>            
            <field name="domain">[('current_state_id.state_type', '=', 'archived')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>Former Members, that left the club. Their contact is archived for further reference.</p>
            </field>
        </record>
    
        <menuitem
            id="club_member_archived_list_menu"
            name="Archived Members"
            action="club_member_archived_list_action"
            groups="clubmanagement.group_clubmanagement_master_user"
            parent="club_member_main_menu"
            sequence="70"/>

    </data>

</odoo>
