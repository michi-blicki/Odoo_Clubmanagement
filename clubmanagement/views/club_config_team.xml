<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="club_config_team_tree_view" model="ir.ui.view">
            <field name="name">club.team.tree</field>
            <field name="model">club.team</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="pool_id" />
                    <field name="hr_department_id" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <record id="club_config_team_form_view" model="ir.ui.view">
            <field name="name">club.team.form</field>
            <field name="model">club.team</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="pool_id" />
                            <field name="hr_department_id" />
                            <field name="active" />
                        </group>
                        <notebook>
                            <page string="Members">
                                <field name="member_ids" readonly="1" create="0" delete="0" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="club_config_team_action" model="ir.actions.act_window">
            <field name="name">Teams</field>
            <field name="res_model">club.team</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                
            </field>
        </record>

        <menuitem
            id="club_config_team_menu"
            name="Teams"
            action="club_config_team_action"
            groups="clubmanagement.group_clubmanagement_master_user"
            parent="clubmanagement_configuration_menu"
            sequence="10"/>
    
    </data>
    

</odoo>
