<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="club_member_form_view" model="ir.ui.view">
            <field name="name">club.member.form</field>
            <field name="model">club.member</field>
            <field name="arch" type="xml">

                <form>
                    <header>
                        <field name="current_state_id" widget="statusbar" options="{'clickable': '1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <div class="oe_button_box" name="button_box">
                                <!-- Hier können später Smart Buttons hinzugefügt werden -->
                            </div>
                            <field name="photo" widget="image" class="oe_avatar" options="{'size': [272, 384]}" nolabel="1" />
                            <div class="oe_title">
                                <h1>
                                    <field name="firstname" placeholder="Firstname" required="1" class="oe_inline"/>
                                    <field name="lastname" placeholder="Lastname" required="1" class="oe_inline"/>
                                </h1>
                            </div>
                        </group>
                        <group>
                            <group>
                                <field name="gender" options="{'no_create': True}"/>
                                <field name="nationality_id" options="{'no_create': True}"/>
                                <field name="birthdate_date"/>
                                <field name="ssnid"/>
                            </group>
                            <group>
                                <field name="is_employee"/>
                                <field name="employee_id" invisible='not is_employee' required='is_employee' options="{'no_create': True}"/>
                                <label for="age" string="Age"/>
                                <div>
                                    <field name="age" class="oe_inline"/> years old
                                </div>
                                <label for="years_in_club" string="Club Membership"/>
                                <div>
                                    <field name="years_in_club" class="oe_inline"/> years,
                                    <field name="months_in_club" class="oe_inline"/> months,
                                    <field name="days_in_club" class="oe_inline"/> days
                                </div>
                                <field name="year_of_birth"/>
                            </group>
                        </group>
                        <group>
                            <group string="Address">
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}"/>
                                </div>
                            </group>
                            <group string="Communication">
                                <field name="email" widget="email"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Guardians" invisible='not requires_guardian'>
                                <field name="guardian_ids">
                                    <list editable="bottom">
                                        <field name="guardian_id"/>
                                        <field name="relation"/>
                                        <field name="is_primary"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Club Member">
                                <group>
                                    <field name="club_id" readonly="1"/>
                                    <field name="subclub_ids" widget="many2many_tags" readonly="1" />
                                    <field name="department_ids" widget="many2many_tags" />
                                    <field name="team_ids" widget="many2many_tags" />
                                </group>
                            </page>
                            <page string="Club Status">
                                <field name="state_history_ids">
                                    <list>
                                        <field name="state_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Memberships">
                                <field name="membership_history_ids">
                                    <list>
                                        <field name="membership_id"/>
                                        <field name="date_start"/>
                                        <field name="date_end"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Club Roles">
                                <field name="role_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="scope_type"/>
                                        <field name="code"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                        <separator string="Messages"/>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="activity_ids" widget="mail_activity"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </div>
                    </sheet>
                </form>


            </field>
        </record>
    
    </data>
    

</odoo>
