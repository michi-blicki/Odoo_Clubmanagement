<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="club_config_club_tree_view" model="ir.ui.view">
            <field name="name">club.club.tree</field>
            <field name="model">club.club</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" />
                    <field name="company_id" />
                    <field name="active" />
                </list>
            </field>
        </record>

        <record id="club_config_club_form_view" model="ir.ui.view">
            <field name="name">club.club.form</field>
            <field name="model">club.club</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="company_id" />
                            <field name="active" />
                        </group>
                        <notebook>
                            <page string="Sub-Clubs">
                                <field name="subclub_ids" />
                            </page>
                            <page string="Boards">
                                <field name="board_ids" />
                            </page>
                            <page string="Departments">
                                <field name="department_ids" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_config_club_action" model="ir.actions.act_window">
            <field name="name">Club</field>
            <field name="res_model">club.club</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="club_config_club_menu"
            name="Clubs"
            action="club_config_club_action"
            groups="clubmanagement.group_clubmanagement_administrator"
            parent="clubmanagement_configuration_menu"
            sequence="50"/>
    </data>

</odoo>
