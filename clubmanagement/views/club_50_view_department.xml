<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="club_department_form_view" model="ir.ui.view">
            <field name="name">club.department.form</field>
            <field name="model">club.department</field>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                                <span class="ml-2" invisible="active == True">
                                    (<span style="color:red;">Archived</span>)
                                </span>
                            </h1>
                        </div>
                        <header>
                            <button
                                name="action_create_default_roles_and_boards"
                                type="object"
                                string="Create Default Roles and Boards"
                                class="btn btn-primary"
                                invisible="id == False"
                            />
                            <field name="active" />
                        </header>
                        <group>
                            <group>
                                <field name="sequence"/>
                                <field name="club_id" readonly="1" invisible="True" />
                                <field name="company_id" groups="clubmanagement.group_clubmanagement_administrator"/>
                                <field name="company_id" readonly="1" groups="!clubmanagement.group_clubmanagement_administrator"/>                                
                                <field name="subclub_id"/>
                                <field name="hr_department_id"/>
                            </group>
                            <group>
                                <field name="member_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Boards">
                                <field name="board_ids" mode="list,form">
                                    <list>
                                        <field name="name"/>
                                        <field name="role_ids" widget="many2many_tags"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Pools">
                                <field name="pool_ids" mode="list,form">
                                    <list>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                        <field name="team_ids" widget="many2many_tags"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Teams">
                                <field name="team_ids" mode="list,form">
                                    <list>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                        <field name="member_ids_display" widget="many2many_tags"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Roles / Functions">
                                <field name="role_ids" context="{'default_department_id': id}">
                                    <list>
                                        <field name="role_type"/>
                                        <field name="scope_type"/>
                                        <field name="member_id"/>
                                        <field name="perm_read"/>
                                        <field name="perm_write"/>
                                        <field name="perm_create"/>
                                        <field name="perm_unlink"/>
                                        <field name="perm_mail"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="club_department_kanban_view" model="ir.ui.view">
            <field name="name">club.department.kanban</field>
            <field name="model">club.department</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column" string="Departments">
                    <templates>
                        <field name="name" />
                        <field name="company_id" />
                        <field name="subclub_id" />
                        <field name="hr_department_id" />
                        <field name="sequence" invisible="True" />
                        <field name="member_count" />
                        <field name="team_ids" />
                        <field name="pool_ids" />
                        <t t-name="card">
                            <div class="oe_kanban_global_tab">
                                <div class="oe_kanban_header" style="display: flex; justify-content: space-between;">
                                    <strong>
                                        <field name="name" />
                                    </strong>
                                    <field name="active"/>
                                </div>
                                <div class="mt-1 small text-muted">
                                    <label for="company_id" string="Company">Company</label>
                                    |
                                    <field name="company_id" />
                                </div>
                                <div class="mt-1 small text-muted" t-if="subclub_id">
                                    <label for="subclub_id" string="Subclub">Subclub</label>
                                    |
                                    <field name="subclub_id" />
                                </div>
                                <div class="mt-1 small text-mutet" t-if="hr_department_id">
                                    <label for="hr_department_id" string="HR Department">HR Department</label>
                                    |
                                    <field name="hr_department_id" />
                                </div>
                                <div class="o_kanban_list_item mt8">
                                    <span class="badge bg-primary" title="Members">
                                        <i class="fa fa-users"/> 
                                        <field name="member_count" />
                                    </span>
                                    <span class="badge bg-info" title="Teams">
                                        <i class="fa fa-users"/> <field name="team_count" />
                                    </span>
                                    <span class="badge bg-success ml-2" title="Pools">
                                        <i class="fa fa-layer-group"/> <field name="pool_count" />
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


        <record id="club_department_list_view" model="ir.ui.view">
            <field name="name">club.department.list</field>
            <field name="model">club.department</field>
            <field name="arch" type="xml">
                <list string="Departments" default_order="sequence, name">
                    <field name="active" widget="boolean_button"/>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="subclub_id"/>
                    <field name="hr_department_id"/>
                    <field name="member_ids_display" widget="many2many_tags" string="Members"/>
                </list>
            </field>
        </record>

        <record id="club_department_search_view" model="ir.ui.view">
            <field name="name">club.department.search</field>
            <field name="model">club.department</field>
            <field name="arch" type="xml">
                <search string="Search Departments">
                    <field name="name"/>
                    <field name="subclub_id"/>
                    <field name="hr_department_id"/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
                </search>
            </field>
        </record>


        <record id="club_department_list_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">club.department</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_ids" eval="[
                (5,0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('club_department_kanban_view')}),
                (0, 0, {'view_mode': 'list', 'view_id': ref('club_department_list_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('club_department_form_view')}),
            ]"/>
            <field name="search_view_id" ref="club_department_search_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first department for the club!
                </p>
            </field>
        </record>

        <menuitem
            id="club_department_menu"
            name="Departments"
            action="club_department_list_action"
            groups="clubmanagement.group_clubmanagement_master_user"
            parent="club_organisation_main_menu"
            sequence="30"/>
    
    </data>
    

</odoo>
