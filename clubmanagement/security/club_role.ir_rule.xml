<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="club_roles_company_rule" model="ir.rule">
            <field name="name">Roles: Only records from user company</field>
            <field name="model_id" ref="clubmanagement.model_club_role"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('clubmanagement.group_clubmanagement_user'))]"/>
        </record>
        
        <record id="club_roles_admin_rule" model="ir.rule">
            <field name="name">Roles: All rights for Club Administrators</field>
            <field name="model_id" ref="clubmanagement.model_club_role"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('clubmanagement.group_clubmanagement_administrator'))]"/>
        </record>
    
    </data>
    

</odoo>
